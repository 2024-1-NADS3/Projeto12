<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cenario5">

    <TextView
        android:id="@+id/textView12S8LostGame1"
        android:layout_width="384dp"
        android:layout_height="69dp"
        android:layout_marginTop="70dp"
        android:background="#CDFFFFFF"
        android:fontFamily="@font/poppins"
        android:text="Ops! Quase lá! Não se preocupe, errar faz parte do aprendizado."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13S8LostGame1"
        android:layout_width="384dp"
        android:layout_height="190dp"
        android:layout_marginTop="69dp"
        android:background="#CDFFFFFF"
        android:fontFamily="@font/poppins"
        android:text="Lembre-se de que cada tipo de lixo tem seu lugar certo de descarte. Dê uma olhadinha novamente nas cores das lixeiras e o que cada uma significa. Você vai acertar na próxima vez! Vamos tentar de novo?🌍 "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12S8LostGame1" />

    <Button
        android:id="@+id/buttonBack3S8LostGame1"
        android:layout_width="274dp"
        android:layout_height="73dp"
        android:layout_marginTop="130dp"
        android:background="#04B50B"
        android:text="Tentar novamente"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:backgroundTint="#04B50B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13S8LostGame1" />

</androidx.constraintlayout.widget.ConstraintLayout>