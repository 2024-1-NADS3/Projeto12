<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black7"
    tools:context=".screen4_wingame2">

    <TextView
        android:id="@+id/textView1S4Win2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/poppins"
        android:text="Parabéns, você acertou! "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2S4Win2"
        android:layout_width="358dp"
        android:layout_height="261dp"
        android:layout_marginTop="56dp"
        android:background="#A6FFFFFF"
        android:fontFamily="@font/poppins"
        android:text="Curiosidade: Você sabia que a madeira que jogamos na lixeira preta pode ter uma segunda vida? Ela pode virar parte de um novo brinquedo, descanso de copo, porta chaves e muito mais! Por isso é tão importante colocar a madeira no lugar certo, assim ela pode ser usada de novo. "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1S4Win2" />

    <Button
        android:id="@+id/buttonGoS4Win2"
        android:layout_width="147dp"
        android:layout_height="115dp"
        android:layout_marginBottom="138dp"
        android:onClick="onClick"
        android:text="Próximo"
        android:textColor="#FBFBFB"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>